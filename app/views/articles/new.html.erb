<div class="wrapper">
  <div class="container">
    <div class="col-xs-6 col-xs-offset-3">
      <div class="jumbotron text-center">
        <%= form_for(@article) do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_field :content, class: 'form-control' %>
        </div>
        <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
